@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">New Product</h6>
                <form method="post">
                    <label>Product Title</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>City</label>
                    <input type="text" asp-for="city" class="form-control" />
                    <br />
                    <label>District</label>
                    <input type="text" asp-for="district" class="form-control" />
                    <br />
                    <label>Category</label>
                    <input type="text" asp-for="categoryName" class="form-control" />
                    <br />
                    <label>Price</label>
                    <input type="text" asp-for="price" class="form-control" />
                    <br />
                    <label>Type</label>
                    <input type="text" asp-for="type" class="form-control" />
                    <br />
                    <label>Product Title</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Photo</label>
                    <input type="text" asp-for="coverImage" class="form-control" />
                    <br />
                    <label>Address</label>
                    <textarea type="text" asp-for="address" class="form-control" rows="5" />
                    <br />
                    <button class="btn btn-primary">Save Product</button>
                </form>
            </div>
        </div>
    </div>
</div>
